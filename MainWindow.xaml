<Window x:Class="IcarusAchievements.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Icarus Achievements"
        Height="500"
        Width="600"
        Background="#2C2C2C">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="#3C3C3C"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Name="PlayerNameText"
                           Text="Player: Loading..."
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"/>
                <TextBlock Name="CurrentGameText"
                           Text="Game: No game detected"
                           Foreground="#CCCCCC"
                           FontSize="12"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Stats Section -->
        <Border Grid.Row="1"
                Background="#3C3C3C"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Progress -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Achievement Progress"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="12"/>
                    <TextBlock Name="ProgressText"
                               Text="0/0 (0%)"
                               Foreground="#1EFF00"
                               FontSize="14"
                               FontWeight="Bold"/>
                    <ProgressBar Name="ProgressBar"
                                 Height="8"
                                 Margin="0,5,0,0"
                                 Background="#1C1C1C"
                                 Foreground="#1EFF00"
                                 Value="0"/>
                </StackPanel>

                <!-- Unlocked -->
                <StackPanel Grid.Column="1"
                            Margin="20,0,0,0">
                    <TextBlock Text="Unlocked"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="12"/>
                    <TextBlock Name="UnlockedText"
                               Text="0"
                               Foreground="#1EFF00"
                               FontSize="20"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Remaining -->
                <StackPanel Grid.Column="2"
                            Margin="20,0,0,0">
                    <TextBlock Text="Remaining"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="12"/>
                    <TextBlock Name="RemainingText"
                               Text="0"
                               Foreground="#FF6B6B"
                               FontSize="20"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Achievement List -->
        <Border Grid.Row="2"
                Background="#3C3C3C"
                CornerRadius="5"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Recent Achievements"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="5,0,0,10"/>
                    <ListBox Name="AchievementListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2C2C2C"
                                        CornerRadius="3"
                                        Padding="10"
                                        Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Achievement Status -->
                                        <Border Grid.Column="0"
                                                Width="30"
                                                Height="30"
                                                CornerRadius="15"
                                                Background="#1EFF00"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="✓"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>

                                        <!-- Achievement Info -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="#CCCCCC"
                                                       FontSize="10"
                                                       TextWrapping="Wrap"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Rarity Badge -->
                                        <Border Grid.Column="2"
                                                Background="#0070DD"
                                                CornerRadius="10"
                                                Padding="8,2"
                                                Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Rarity}"
                                                       Foreground="White"
                                                       FontSize="9"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Name="TestAchievementButton"
                    Content="Test Achievement"
                    Background="#1EFF00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Click="TestAchievementButton_Click"/>
            <Button Name="RefreshButton"
                    Content="Refresh Data"
                    Background="#0070DD"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="15,5"
                    Click="RefreshButton_Click"/>
        </StackPanel>
    </Grid>
</Window>